<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
        android:layout_height="match_parent">

    <LinearLayout
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="@drawable/img_card_background"
            app:layout_constraintDimensionRatio="H,3:5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:paddingTop="40dp"
            android:paddingBottom="61dp"
            android:paddingLeft="@dimen/card_content_margin_left"
            android:paddingRight="@dimen/card_content_margin_left">

        <EditText
                android:id="@+id/cardMessageEditTv"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="top"
                android:fontFamily="@font/gyeonggi_batang_bold"
                android:textSize="18sp"
                android:textColor="@color/gray1"
                android:textColorHint="@color/gray4"
                android:hint="@string/hint_card_message"
                android:background="@null"
                android:inputType="text"
                android:importantForAutofill="no"
                tools:targetApi="o"/>

        <TextView
                android:id="@+id/cardMessageTv"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                style="@style/GyeonggiBatangBoldTv"
                android:gravity="top"
                android:background="@null"
                android:text="@string/hint_card_message"/>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>