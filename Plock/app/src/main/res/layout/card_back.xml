<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
        android:layout_height="match_parent">

    <RelativeLayout
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="@drawable/img_card_background"
            app:layout_constraintDimensionRatio="H,3:5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:paddingTop="40dp"
            android:paddingLeft="@dimen/card_content_margin_left">

        <EditText
                android:id="@+id/cardMessageEditTv"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="top"
                android:fontFamily="@font/gyeonggi_batang_bold"
                android:textSize="18sp"
                android:textColor="@color/gray1"
                android:textColorHint="@color/gray4"
                android:hint="@string/hint_card_message"
                android:background="@null"
                android:inputType="textMultiLine"
                android:importantForAutofill="no"
                tools:targetApi="o"
                android:maxLength="250"
                android:layout_marginRight="@dimen/card_content_margin_left"
                android:layout_marginBottom="80dp"
                android:visibility="gone"/>

        <TextView
                android:id="@+id/cardMessageTv"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                style="@style/GyeonggiBatangBoldTv"
                android:gravity="top"
                android:background="@null"
                android:text="@string/hint_card_message"
                android:layout_marginRight="@dimen/card_content_margin_left"
                android:layout_marginBottom="61dp"
                android:visibility="gone"/>

        <ImageView
                android:id="@+id/flipBtnInBack"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:src="@drawable/ic_flip"
                android:padding="12dp"
                android:layout_gravity="right"
                android:layout_alignParentRight="true"
                android:layout_alignParentBottom="true"
                android:layout_margin="24dp"/>
    </RelativeLayout>


</androidx.constraintlayout.widget.ConstraintLayout>