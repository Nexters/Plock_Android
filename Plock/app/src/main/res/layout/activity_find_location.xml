<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.write.FindLocationActivity">

    <include
            android:id="@+id/toolbar_find_location"
            layout="@layout/toolbar_custom"
    />

    <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/find_location_search_layout"
            android:layout_width="@dimen/bottom_sheet_txv_width"
            android:layout_height="@dimen/bottom_sheet_txv_height"
            android:background="@drawable/bottom_sheet_txv"
            android:layout_marginTop="4dp"
            app:layout_constraintTop_toBottomOf="@+id/toolbar_find_location"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent">

        <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/imv_find_location_search"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                android:layout_marginStart="@dimen/bottom_sheet_txv_left_margin"
                app:srcCompat="@drawable/bottom_sheet_search"
        />

        <androidx.appcompat.widget.AppCompatEditText
                android:id="@+id/find_location_editText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="4dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toRightOf="@+id/imv_find_location_search"
        />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_find_location"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clipToPadding="false"
            android:overScrollMode="never"
            android:nestedScrollingEnabled="false"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            tools:listitem="@layout/find_location_item"
            app:layout_constraintTop_toBottomOf="@+id/find_location_search_layout">

    </androidx.recyclerview.widget.RecyclerView>

</androidx.constraintlayout.widget.ConstraintLayout>