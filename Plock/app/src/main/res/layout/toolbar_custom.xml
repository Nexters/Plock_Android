<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <androidx.appcompat.widget.Toolbar
            android:layout_width="0dp"
            android:layout_height="@dimen/toolbar_height"
            app:contentInsetStart="0dp"
            app:contentInsetEnd="0dp"
            android:background="@color/white_80"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

            <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/imv_toolbar_left"
                    android:layout_width="@dimen/toolbar_image_size"
                    android:layout_height="@dimen/toolbar_image_size"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    android:layout_marginStart="@dimen/toolbar_left_margin"
                    app:srcCompat="@drawable/toolbar_back"
            />

            <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/txv_toolbar_center"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/toolbar_txv_size"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintLeft_toRightOf="@+id/imv_toolbar_left"
                    android:textSize="18sp"
                    android:textColor="@color/charcoal_grey"
            />

            <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/imv_toolbar_right"
                    android:layout_width="@dimen/toolbar_image_size"
                    android:layout_height="@dimen/toolbar_image_size"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    android:layout_marginEnd="@dimen/toolbar_right_margin"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.appcompat.widget.Toolbar>

</androidx.constraintlayout.widget.ConstraintLayout>