<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:segmentedgroup="http://schemas.android.com/tools"
        android:layout_width="match_parent" android:layout_height="wrap_content">

    <androidx.appcompat.widget.Toolbar
            android:layout_width="0dp"
            android:layout_height="@dimen/toolbar_height"
            app:contentInsetStart="0dp"
            app:contentInsetEnd="0dp"
            android:background="@color/white_80"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

            <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/imv_toolbar_back"
                    android:layout_width="@dimen/toolbar_image_size"
                    android:layout_height="@dimen/toolbar_image_size"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    android:layout_marginStart="@dimen/toolbar_left_margin"
                    app:srcCompat="@drawable/ic_arrow_left"/>

            <info.hoang8f.android.segmented.SegmentedGroup
                    android:id="@+id/segment_group_toolbar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:orientation="horizontal"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    segmentedgroup:sc_border_width="1dp"
                    segmentedgroup:sc_corner_radius="4dp">

                <RadioButton
                        android:id="@+id/btn_map_segment_toolbar"
                        android:layout_width="73dp"
                        android:layout_height="30dp"
                        android:text="지도"
                        android:textSize="13sp"
                        android:textStyle="bold"
                        android:fontFamily="@font/notosans_regular"
                        android:includeFontPadding="false"
                        android:checked="true"
                        style="@style/RadioButton" />

                <RadioButton
                        android:id="@+id/btn_list_segment_toolbar"
                        android:layout_width="73dp"
                        android:layout_height="30dp"
                        android:text="리스트"
                        android:textStyle="bold"
                        android:fontFamily="@font/notosans_regular"
                        android:includeFontPadding="false"
                        android:textSize="13sp"
                        style="@style/RadioButton" />

            </info.hoang8f.android.segmented.SegmentedGroup>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.appcompat.widget.Toolbar>

</androidx.constraintlayout.widget.ConstraintLayout>