<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.main.MainActivity">

    <LinearLayout
        android:id="@+id/logoIv"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintHeight_percent="0.6"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/bottomLayout"
        android:orientation="vertical"
        android:gravity="center|bottom">

        <ImageView
            android:layout_width="233dp"
            android:layout_height="207dp"
            android:src="@drawable/img_main_character"
            android:layout_marginBottom="14dp"/>

        <ImageView
            android:layout_width="168dp"
            android:layout_height="52dp"
            android:src="@drawable/img_plock"/>
    </LinearLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/bottomLayout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintHeight_percent="0.4"
        app:layout_constraintTop_toBottomOf="@+id/logoIv">

        <LinearLayout
            android:id="@+id/writeCardLayout"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@id/centerView">

            <ImageView
                android:layout_width="76dp"
                android:layout_height="76dp"
                android:src="@drawable/img_write"
                android:padding="4dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="카드기록"
                android:layout_marginTop="4dp"/>
        </LinearLayout>

        <View
            android:id="@+id/centerView"
            android:layout_width="2dp"
            android:layout_height="76dp"
            android:background="@color/colorPrimary"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@+id/showCardLayout"
            app:layout_constraintBottom_toBottomOf="@id/showCardLayout"/>

        <LinearLayout
            android:id="@+id/showCardLayout"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center"
            app:layout_constraintLeft_toLeftOf="@id/centerView"
            app:layout_constraintRight_toRightOf="parent">

            <ImageView
                android:layout_width="76dp"
                android:layout_height="76dp"
                android:src="@drawable/img_location"
                android:padding="8dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="열람하기"
                android:layout_marginTop="4dp"/>
        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
