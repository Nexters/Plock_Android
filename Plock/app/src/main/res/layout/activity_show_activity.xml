<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <include
            android:id="@+id/toolbar_segment"
            layout="@layout/toolbar_segment"/>

    <FrameLayout
            android:id="@+id/fl_show"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/toolbar_segment"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent">

    </FrameLayout>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/fab_location_show"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toTopOf="@+id/fab_write"
            app:layout_constraintRight_toRightOf="@+id/fab_write"
            android:backgroundTint="@color/white"
            android:scaleType="center"
            android:layout_marginBottom="10dp"
            app:srcCompat="@drawable/fab_map_location"/>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/fab_write"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:backgroundTint="@color/mainBlue"
            android:scaleType="center"
            android:layout_marginEnd="@dimen/fab_write_margin_right"
            android:layout_marginBottom="@dimen/fab_write_margin_bottom"
            app:srcCompat="@drawable/fab_write"/>

</androidx.constraintlayout.widget.ConstraintLayout>