<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/bottom_sheet"
        android:layout_width="match_parent"
        android:layout_height="@dimen/bottom_sheet_height"
        android:orientation="vertical"
        android:background="@drawable/bottom_sheet"
        app:behavior_hideable="false"
        app:layout_behavior="com.google.android.material.bottomsheet.BottomSheetBehavior">

    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/cardTxv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/sheet_txv"
                android:textSize="14sp"
                android:textColor="@color/gray4"
                android:layout_marginTop="20dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="@+id/sheet_custom_layout"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintHorizontal_bias="0.0"/>

        <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/sheet_custom_layout"
                android:layout_width="@dimen/bottom_sheet_txv_width"
                android:layout_height="@dimen/bottom_sheet_txv_height"
                android:background="@drawable/bottom_sheet_txv"
                android:layout_marginTop="4dp"
                app:layout_constraintTop_toBottomOf="@+id/cardTxv"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent">

            <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/imv_bottom_sheet_search"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    android:layout_marginLeft="@dimen/bottom_sheet_txv_left_margin"
                    app:srcCompat="@drawable/bottom_sheet_search"
            />

            <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/cardETxt"
                    android:layout_width="260dp"
                    android:layout_height="wrap_content"
                    android:maxLines="1"
                    android:textSize="16sp"
                    android:textColor="@color/gunmetal"
                    android:ellipsize="end"
                    android:layout_marginLeft="4dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintLeft_toRightOf="@+id/imv_bottom_sheet_search"
            />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <Button
                android:id="@+id/cardBtn"
                android:layout_width="@dimen/bottom_sheet_btn_width"
                android:layout_height="@dimen/bottom_sheet_btn_height"
                android:text="@string/sheet_set_button"
                android:textSize="16sp"
                android:textColor="@color/white"
                android:layout_marginTop="20dp"
                android:background="@drawable/bottom_sheet_btn"
                app:layout_constraintTop_toBottomOf="@+id/sheet_custom_layout"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
        />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.appcompat.widget.LinearLayoutCompat>