<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_marginTop="@dimen/show_list_margin_left"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/parent_layout_list_item"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintDimensionRatio="W,8:11"
            android:background="#99000000"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginStart="13dp"
            android:layout_marginEnd="13dp">

        <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/imv_picture_show_list"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/img_main_character"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"/>

        <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/txv_date_show_list"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2019.07.14"
                android:textSize="14sp"
                android:textColor="@color/white"
                android:layout_marginTop="@dimen/show_list_margin_top"
                android:layout_marginStart="@dimen/show_list_margin_left"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"/>

        <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/txv_title_show_list"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="처음만난곳"
                android:textSize="18sp"
                android:textColor="@color/white"
                app:layout_constraintTop_toBottomOf="@+id/txv_date_show_list"
                app:layout_constraintLeft_toLeftOf="@+id/txv_date_show_list"/>

        <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/imv_lock_show_list"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/show_list_margin_left"
                android:layout_marginEnd="@dimen/show_list_margin_top"
                android:src="@drawable/lock"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.constraintlayout.widget.ConstraintLayout>